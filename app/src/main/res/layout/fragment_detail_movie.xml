<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/movieheadingpadding"
                android:paddingTop="@dimen/movieheadingpadding"
                app:cardCornerRadius="@dimen/cardcornerradius1dp"
                app:cardBackgroundColor="#059175"
                android:minHeight="130sp"
                >
                <TextView
                    android:id="@+id/movie_title_detailView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample"
                    android:textSize="@dimen/movie_title_size"
                    android:textColor="@color/cardview_light_background"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageview_detailfragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_detailmovie"
                    android:scaleType="fitXY"
                    />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/cardcornerradius1dp"
                    android:elevation="@dimen/elevationcard"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Release Date"
                        android:textSize="@dimen/textsize20"
                        android:layout_marginTop="@dimen/topmargin25"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/leftmargin20"/>

                    <TextView
                        android:id="@+id/release_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize30"
                        android:layout_marginLeft="@dimen/leftmargin20" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Rating"
                        android:textColor="#000000"
                        android:textSize="@dimen/textsize20"
                        android:layout_marginTop="@dimen/topmargin25"
                        android:layout_marginLeft="@dimen/leftmargin20"/>
                    <TextView
                        android:id="@+id/user_rating_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize30"
                        android:layout_marginLeft="@dimen/leftmargin20"
                        android:textStyle="italic"/>


                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardcornerradius1dp"
                android:elevation="@dimen/elevationcard"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="10sp">
            <TextView
                android:id="@+id/synopsis_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
